rules_version = '2';

// REGLAS DE FIREBASE STORAGE PARA ARTEYSPA.COM
// Permite lectura pública y escritura autenticada

service firebase.storage {
  match /b/{bucket}/o {
    
    // Permite que cualquiera LEA las imágenes de productos
    match /products/{imageId} {
      allow read: if true;
      allow write: if true; // TEMPORAL: Cambia esto después
    }
    
